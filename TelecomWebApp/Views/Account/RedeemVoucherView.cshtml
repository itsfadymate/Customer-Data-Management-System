<link rel="stylesheet" href="styles.css">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redeem Voucher</title>
    <link rel="stylesheet" href="~/css/RechargeBalance.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h2>Redeem Your Voucher</h2>
        <form asp-controller="Account" asp-action="RedeemVoucher" method="POST">
            <div class="form-group">
                <label for="voucher-id">Voucher ID</label>
                <input type="text" id="voucher-id" name="voucherID" placeholder="Enter Voucher ID" required>
            </div>
            <button type="submit">Redeem Voucher</button>
        </form>
    </div>
</body>
</html>
