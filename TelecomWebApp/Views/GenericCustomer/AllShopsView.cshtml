@model StoreListViewModel
<head>
    <title>Vodafone Stores</title>
    <link rel="stylesheet" href="~/css/AllShops.css" asp-append-version="true" />
</head>
<body>
    <header>
            <h1>Find a Store</h1>
       </header>
    <div class="shop-container">
        

        <h2>Stores in Your Area</h2>
        <div class="big-list">
        @for (int i=0;i<Model.Shops.Count;i+=3){
            <div class="store-list">
                @for (int j = i; j < i + 3 && j < Model.Shops.Count; j++)
                {
                    var shop = Model.Shops[j];
                    <div class="store-item">
                        <img src="https://via.placeholder.com/300" alt="Vodafone Store" class="store-image">
                        <div class="store-info">
                            <h3>@shop.name</h3>
                            <p>@shop.shopID</p>
                            <p>@shop.Category</p>
                        </div>
                    </div>
                }
            </div>
        }
            
        </div>
       
           
            
        </div>
    </div>
</body>
</html>
