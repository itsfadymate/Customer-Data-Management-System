@model TelecomWebApp.Models.RemoveBenefit

@{
    ViewData["Title"] = "Remove Benefits from Account";
}

<h1>Remove Benefits from Account</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="mobileNo">Mobile Number</label>
        <input asp-for="mobileNo" class="form-control" maxlength="11" required />
        <span asp-validation-for="mobileNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="planID">Plan ID</label>
        <input asp-for="planID" type="number" class="form-control" required />
        <span asp-validation-for="planID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger">Remove Benefits</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
