@{
    ViewData["Title"] = "Update Account Points";
}
<link rel="stylesheet" href="~/css/adminModern.css" />
<h2>@ViewData["Title"]</h2>

<form method="post" action="/Admin/UpdateAccountPoints">
    <div class="form-group">
        <label for="mobileNo">Mobile Number:</label>
        <input type="text" id="mobileNo" name="mobileNo" class="form-control" maxlength="11" required />
    </div>
    <button type="submit" class="btn btn-primary">Get & Update Total Points</button>
</form>

@if (ViewBag.TotalPoints != null)
{
    <div class="mt-3">
        <h4>Total Points:</h4>
        <p>@ViewBag.TotalPoints</p>
    </div>
}
