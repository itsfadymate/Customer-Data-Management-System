@model IEnumerable<TelecomWebApp.Models.SMSOffer>

<h1>SMS Offers for Account</h1>

@if (!Model.Any())
{
    <p>No SMS offers found for the given Mobile Number.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Offer ID</th>
                <th>Offer Description</th>
                <th>Validity Date</th>
                <th>Status</th>
                <th>Mobile Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var offer in Model)
            {
                <tr>
                    <td>@offer.offerID</td>
                    <td>@offer.offer_description</td>
                    <td>@offer.validity_date.ToShortDateString()</td>
                    <td>@offer.status</td>
                    <td>@offer.mobileNo</td>
                </tr>
            }
        </tbody>
    </table>
}
